<!-- Contact Section -->
<section id="contact" class="py-5 bg-light">
    <div class="container">
        <h2 class="fw-bold text-uppercase text-center mb-5">Get in Touch</h2>
        <div class="row justify-content-center align-items-center">
            <!-- Contact Information -->
            <div class="col-lg-5 text-center text-lg-start mb-4 mb-lg-0">
                <h4 class="fw-bold mb-3">Contact Information</h4>
                <p class="mb-3"><i class="fas fa-envelope me-2 text-primary"></i> <span class="fw-bold">Email:</span> support@vacationpro.com</p>
                <p class="mb-3"><i class="fas fa-phone me-2 text-primary"></i> <span class="fw-bold">Phone:</span> +1 728-365-413</p>
                <p class="mb-4"><i class="fas fa-map-marker-alt me-2 text-primary"></i> <span class="fw-bold">Address:</span> 123 Vacation St., NY</p>
                <a href="mailto:support@vacationpro.com" class="btn btn-gradient rounded-pill px-5 fw-bold mt-3">Email Us</a>
            </div>
            <!-- Contact Form -->
            <div class="col-lg-6">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-4">
                        <h4 class="fw-bold mb-4 text-center">Send Us a Message</h4>
                        <form action="#" method="post">
                            <div class="mb-4">
                                <label for="name" class="form-label">Your Name</label>
                                <input type="text" class="form-control shadow-sm" id="name" placeholder="Enter your name">
                            </div>
                            <div class="mb-4">
                                <label for="email" class="form-label">Email Address</label>
                                <input type="email" class="form-control shadow-sm" id="email" placeholder="Enter your email">
                            </div>
                            <div class="mb-4">
                                <label for="message" class="form-label">Your Message</label>
                                <textarea class="form-control shadow-sm" id="message" rows="5" placeholder="Write your message"></textarea>
                            </div>
                            <button type="submit" class="btn btn-gradient w-100 rounded-pill fw-bold">Send Message</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
