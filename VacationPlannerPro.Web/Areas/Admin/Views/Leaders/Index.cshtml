@using VacationPlannerPro.Business.DTOs
@model PaginatedListDTO<VacationPlannerPro.Business.DTOs.LeaderDTOs.LeaderDTO>

@{
    ViewBag.Title = "Leaders Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mt-3">Leaders Management</h2>

<div class="mt-3">
    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-table me-1"></i> Leaders List</h5>
                <a href="@Url.Action("Create", "Leaders", new { area = "Admin" })" class="btn btn-success">
                    <i class="fa-solid fa-plus"></i> Create New Leader
                </a>
            </div>
        </div>
        <div class="card-body">
            <!-- Search Bar -->
            <form method="get" action="@Url.Action("Index", "Leaders", new { area = "Admin" })" class="mb-4">
                <div class="input-group">
                    <input type="text" class="form-control" name="searchTerm" value="@ViewBag.SearchTerm" placeholder="Search by Name">
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="fa-solid fa-search"></i> Search
                    </button>
                </div>
            </form>

            <table class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Items.FirstOrDefault().FullName)</th>
                        <th>@Html.DisplayNameFor(model => model.Items.FirstOrDefault().Age)</th>
                        <th>@Html.DisplayNameFor(model => model.Items.FirstOrDefault().ProfessionName)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        @foreach (var leader in Model.Items)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => leader.FullName)</td>
                                <td>@Html.DisplayFor(m => leader.Age)</td>
                                <td>@Html.DisplayFor(m => leader.ProfessionName)</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Edit", "Leaders", new { id = leader.Id, area = "Admin" })" class="btn btn-warning btn-sm">
                                            <i class="fa-solid fa-edit"></i> Edit
                                        </a>
                                        <a href="@Url.Action("Delete", "Leaders", new { id = leader.Id, area = "Admin" })" class="btn btn-outline-danger btn-sm">
                                            <i class="fa-solid fa-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">No leaders found.</td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Pagination -->
            <div class="d-flex justify-content-center">
                <ul class="pagination">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", "Leaders", new { area = "Admin", page = Model.CurrentPage - 1, searchTerm = ViewBag.SearchTerm })">Previous</a>
                    </li>
                    @for (var i = 1; i <= (Model.TotalCount + Model.PageSize - 1) / Model.PageSize; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", "Leaders", new { area = "Admin", page = i, searchTerm = ViewBag.SearchTerm })">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.CurrentPage == Model.TotalCount / Model.PageSize ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", "Leaders", new { area = "Admin", page = Model.CurrentPage + 1, searchTerm = ViewBag.SearchTerm })">Next</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-center">
    <a class="btn btn-primary btn-sm fw-bold text-white" href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">
        <i class="fa-solid fa-arrow-left"></i> Back to Dashboard
    </a>
</div>