@model IEnumerable<VacationPlannerPro.Business.DTOs.ProjectDTOs.ProjectDTO>

@{
    ViewBag.Title = "Projects Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mt-3">Projects Management</h2>

<div class="mt-3">
    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-table me-1"></i> Projects List</h5>
                <a href="@Url.Action("Create", "Projects", new { area = "Admin" })" class="btn btn-success">
                    <i class="fa-solid fa-plus"></i> Create New Project
                </a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Description)</th>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().StartDate)</th>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().EndDate)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var project in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => project.Name)</td>
                                <td>@Html.DisplayFor(m => project.Description)</td>
                                <td>@project.StartDate.ToShortDateString()</td>
                                <td>@project.EndDate.ToShortDateString()</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Edit", "Projects", new { id = project.Id, area = "Admin" })" class="btn btn-outline-warning btn-sm">
                                            <i class="fa-solid fa-edit"></i> Edit
                                        </a>
                                        <a href="@Url.Action("Delete", "Projects", new { id = project.Id, area = "Admin" })" class="btn btn-outline-danger btn-sm">
                                            <i class="fa-solid fa-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">No projects found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="d-flex justify-content-center">
    <a class="btn btn-primary btn-sm fw-bold text-white" href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">
        <i class="fa-solid fa-arrow-left"></i> Back to Dashboard
    </a>
</div>
