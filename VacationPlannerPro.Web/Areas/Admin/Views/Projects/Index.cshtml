@using VacationPlannerPro.Business.DTOs
@model IEnumerable<VacationPlannerPro.Business.DTOs.ProjectDTOs.ProjectDTO>

@{
    ViewBag.Title = "Projects Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center text-uppercase my-5">Projects Management</h2>

<div class="d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-lg mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-table me-1"></i> Projects List
            </h5>
            <a href="@Url.Action("Create", "Projects", new { area = "Admin" })" class="btn btn-light">
                <i class="fa-solid fa-plus"></i> Create New Project
            </a>
        </div>
        <div class="card-body">
            <table class="table table-hover table-striped align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Description)</th>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().StartDate)</th>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().EndDate)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var project in Model)
                        {
                            <tr>
                                <td>@project.Name</td>
                                <td>@project.Description</td>
                                <td>@project.StartDate.ToShortDateString()</td>
                                <td>@project.EndDate.ToShortDateString()</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Projects", new { id = project.Id, area = "Admin" })" class="btn btn-outline-warning btn-sm">
                                        <i class="fa-solid fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "Projects", new { id = project.Id, area = "Admin" })" class="btn btn-outline-danger btn-sm">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">No projects found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
