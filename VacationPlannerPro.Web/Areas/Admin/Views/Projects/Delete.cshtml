@using VacationPlannerPro.Business.DTOs.ProjectDTOs
@model ProjectDTO

@{
    ViewBag.Title = "Delete Project";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-lg border-0 rounded-lg mt-3">
            <div class="card-header bg-danger text-white">
                <h3 class="text-center text-uppercase font-weight-light my-4">Delete Project</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Delete", "Projects", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)

                    <h5 class="alert alert-danger">
                        Are you sure you want to delete this project?
                    </h5>

                    <dl class="row">
                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4">Start Date:</dt>
                        <dd class="col-sm-8">@Model.StartDate.ToShortDateString()</dd>

                        <dt class="col-sm-4">End Date:</dt>
                        <dd class="col-sm-8">@Model.EndDate.ToShortDateString()</dd>
                    </dl>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="@Url.Action("Index", "Projects", new { area = "Admin" })" class="btn btn-outline-primary">
                            <i class="fa-solid fa-chevron-left"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fa-solid fa-trash"></i> Delete
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
