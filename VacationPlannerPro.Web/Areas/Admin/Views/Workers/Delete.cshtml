@using VacationPlannerPro.Business.DTOs.WorkerDTOs
@model WorkerDTO

@{
    ViewBag.Title = "Delete Worker";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0 rounded-lg mt-3">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Delete Worker</h3></div>
            <div class="card-body mx-5">
                <h5 class="alert alert-danger">
                    Are you sure you want to delete this worker?
                </h5>
                <div>
                    <dl class="row">
                        <div class="col-sm-4">
                            <dt class="text-primary">Full Name</dt>
                            <dd>@Model.FullName</dd>
                        </div>
                        <div class="col-sm-4">
                            <dt class="text-primary">Age</dt>
                            <dd>@Model.Age</dd>
                        </div>
                        <div class="col-sm-4">
                            <dt class="text-primary">Profession</dt>
                            <dd>@Model.ProfessionName</dd>
                        </div>
                    </dl>
                </div>
                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("Index", "Workers", new { area = "Admin" })" class="btn btn-outline-primary"><i class="fa-solid fa-chevron-left"></i> Back to List</a>
                    <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i> Delete</button>
                </div>
            </div>
        </div>
    </div>
</div>
